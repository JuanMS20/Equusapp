<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".QuizActivity">

    <!-- Header con progreso -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        app:cardBackgroundColor="@color/primary_brown"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation_raised"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md">

            <LinearLayout
                android:id="@+id/progressInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginEnd="@dimen/spacing_sm"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnHome">

                <TextView
                    android:id="@+id/tvQuizTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Quiz de Anatomía"
                    android:textAppearance="@style/TextAppearance.EquusApp.Headline3"
                    android:textColor="@color/text_on_dark"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tvProgress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pregunta 1 de 5"
                    android:textAppearance="@style/TextAppearance.EquusApp.Caption"
                    android:textColor="@color/text_on_dark"
                    android:alpha="0.8"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/spacing_xs" />

                <ProgressBar
                    android:id="@+id/progressBar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="@dimen/spacing_sm"
                    android:progress="20"
                    android:max="100"
                    android:progressTint="@color/accent_gold"
                    android:progressBackgroundTint="@color/secondary_brown" />
            </LinearLayout>
            
            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="@dimen/nav_button_size"
                android:layout_height="@dimen/nav_button_size"
                android:background="@drawable/bg_button_navigation"
                android:contentDescription="Ir al menú principal"
                android:padding="@dimen/spacing_sm"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_home"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:tint="@color/text_on_dark" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Card de pregunta -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/questionCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        app:cardBackgroundColor="@color/warm_cream"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_padding_large">

            <TextView
                android:id="@+id/tvQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Cuál es la función del músculo X?"
                android:textAppearance="@style/TextAppearance.EquusApp.Headline4"
                android:textColor="@color/text_primary"
                android:lineSpacingMultiplier="1.3" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Opciones de respuesta -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/optionsCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/questionCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_md">

            <RadioGroup
                android:id="@+id/radioGroupOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbOption1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opción A"
                    android:textAppearance="@style/TextAppearance.EquusApp.Body"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:padding="@dimen/spacing_md"
                    android:minHeight="56dp"
                    android:background="@drawable/radio_option_background"
                    app:useMaterialThemeColors="false"
                    app:buttonTint="@color/primary_brown" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbOption2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opción B"
                    android:textAppearance="@style/TextAppearance.EquusApp.Body"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:padding="@dimen/spacing_md"
                    android:minHeight="56dp"
                    android:background="@drawable/radio_option_background"
                    app:useMaterialThemeColors="false"
                    app:buttonTint="@color/primary_brown" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbOption3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opción C"
                    android:textAppearance="@style/TextAppearance.EquusApp.Body"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="@dimen/spacing_sm"
                    android:padding="@dimen/spacing_md"
                    android:minHeight="56dp"
                    android:background="@drawable/radio_option_background"
                    app:useMaterialThemeColors="false"
                    app:buttonTint="@color/primary_brown" />

                <com.google.android.material.radiobutton.MaterialRadioButton
                    android:id="@+id/rbOption4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Opción D"
                    android:textAppearance="@style/TextAppearance.EquusApp.Body"
                    android:textColor="@color/text_primary"
                    android:padding="@dimen/spacing_md"
                    android:minHeight="56dp"
                    android:background="@drawable/radio_option_background"
                    app:useMaterialThemeColors="false"
                    app:buttonTint="@color/primary_brown" />

            </RadioGroup>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <!-- Controles con Material Buttons -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/optionsCard">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSkip"
            style="@style/Widget.EquusApp.Button.Secondary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_sm"
            android:text="Saltar" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnswer"
            style="@style/Widget.EquusApp.Button.Primary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_sm"
            android:text="Responder" />

    </LinearLayout>

    <!-- Información de tiempo -->
    <TextView
        android:id="@+id/tvTimeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiempo: 00:30"
        android:textAppearance="@style/TextAppearance.EquusApp.Caption"
        android:textColor="@color/text_tertiary"
        android:layout_marginTop="@dimen/spacing_md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/controlsLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>
