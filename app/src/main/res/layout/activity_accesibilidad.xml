<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAccesibilidad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Accesibilidad">

    <!-- Header moderno -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/screen_margin_horizontal"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/screen_margin_horizontal"
        app:cardBackgroundColor="@color/primary_brown"
        app:cardCornerRadius="@dimen/card_corner_radius_large"
        app:cardElevation="@dimen/card_elevation_raised"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/card_padding_large">

            <TextView
                android:id="@+id/tvTitleAccesibilidad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Configuraci贸n de Accesibilidad"
                android:textAppearance="@style/TextAppearance.CaballoApp.Headline2"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_xs"
                android:gravity="center"
                android:text="Personaliza la experiencia visual"
                android:textAppearance="@style/TextAppearance.CaballoApp.Body"
                android:textColor="@color/white"
                android:alpha="0.9" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_md"
        android:fillViewport="true"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/screen_margin_horizontal"
            android:paddingBottom="@dimen/spacing_lg">

            <!-- Secci贸n de Daltonismo -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_md"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/border_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_large">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Adaptaci贸n para Daltonismo"
                        android:textAppearance="@style/TextAppearance.CaballoApp.Headline4"
                        android:layout_marginBottom="@dimen/spacing_sm" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selecciona el modo de colores que mejor se adapte a tu visi贸n:"
                        android:textAppearance="@style/TextAppearance.CaballoApp.Body"
                        android:layout_marginBottom="@dimen/spacing_md" />

                    <RadioGroup
                        android:id="@+id/rgModosDaltonismo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:padding="@dimen/spacing_md"
                            android:minHeight="@dimen/button_height"
                            android:background="@drawable/radio_option_background"
                            android:text="Colores Est谩ndar"
                            android:textAppearance="@style/TextAppearance.CaballoApp.Label"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbProtanopia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_md"
                            android:minHeight="@dimen/button_height"
                            android:background="@drawable/radio_option_background"
                            android:text="Protanopia (Dificultad con rojos)"
                            android:textAppearance="@style/TextAppearance.CaballoApp.Body"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbDeuteranopia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_md"
                            android:minHeight="@dimen/button_height"
                            android:background="@drawable/radio_option_background"
                            android:text="Deuteranopia (Dificultad con verdes)"
                            android:textAppearance="@style/TextAppearance.CaballoApp.Body"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbTritanopia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_md"
                            android:minHeight="@dimen/button_height"
                            android:background="@drawable/radio_option_background"
                            android:text="Tritanopia (Dificultad con azules/amarillos)"
                            android:textAppearance="@style/TextAppearance.CaballoApp.Body"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbAcromatopsia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/spacing_md"
                            android:minHeight="@dimen/button_height"
                            android:background="@drawable/radio_option_background"
                            android:text="Acromatopsia (Visi贸n en escala de grises)"
                            android:textAppearance="@style/TextAppearance.CaballoApp.Body"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />
                    </RadioGroup>

                    <!-- Vista previa de colores -->
                    <LinearLayout
                        android:id="@+id/colorPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_sm"
                            android:text="Vista previa:"
                            android:textAppearance="@style/TextAppearance.CaballoApp.Caption" />

                        <View
                            android:id="@+id/previewColor1"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="@dimen/spacing_xxs"
                            android:background="@drawable/circle_shape" />

                        <View
                            android:id="@+id/previewColor2"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="@dimen/spacing_xxs"
                            android:background="@drawable/circle_shape" />

                        <View
                            android:id="@+id/previewColor3"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="@dimen/spacing_xxs"
                            android:background="@drawable/circle_shape" />

                        <View
                            android:id="@+id/previewColor4"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_marginHorizontal="@dimen/spacing_xxs"
                            android:background="@drawable/circle_shape" />
                    </LinearLayout>

                    <!-- Bot贸n para desactivar daltonismo -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDesactivarDaltonismo"
                        style="@style/Widget.CaballoApp.Button.Outlined"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height_small"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="Desactivar Daltonismo"
                        android:textAllCaps="false"
                        android:visibility="gone" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Bot贸n Tutorial -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="@color/border_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding_large">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_sm"
                        android:text="Tutorial de la Aplicaci贸n"
                        android:textAppearance="@style/TextAppearance.CaballoApp.Headline4" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_md"
                        android:text="Vuelve a ver el tutorial interactivo para familiarizarte con todas las funciones de CaballoApp."
                        android:textAppearance="@style/TextAppearance.CaballoApp.Body" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReiniciarTutorial"
                        style="@style/Widget.CaballoApp.Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/button_height"
                        android:text="  Reiniciar Tutorial"
                        android:textAllCaps="false" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botones de Acci贸n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVolverAccesibilidad"
                    style="@style/Widget.CaballoApp.Button.Outlined"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginEnd="@dimen/spacing_sm"
                    android:layout_weight="1"
                    android:text="Cancelar"
                    android:textAllCaps="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardarAccesibilidad"
                    style="@style/Widget.CaballoApp.Button.Primary"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginStart="@dimen/spacing_sm"
                    android:layout_weight="1"
                    android:text="Guardar"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
