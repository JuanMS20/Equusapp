<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutAccesibilidad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Accesibilidad">

    <!-- Header moderno -->
    <androidx.cardview.widget.CardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:cardBackgroundColor="@color/primary_brown"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvTitleAccesibilidad"
                    style="@style/TitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="CONFIGURACIN DE ACCESIBILIDAD"
                    android:textSize="22sp" />

                <TextView
                    style="@style/SubtitleText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:gravity="center"
                    android:text="Personaliza la experiencia visual"
                    android:textSize="14sp" />
            </LinearLayout>
            
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Secci贸n de Daltonismo -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ADAPTACIN PARA DALTONISMO"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:fontFamily="sans-serif-medium"
                        android:layout_marginBottom="12dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Selecciona el modo de colores que mejor se adapte a tu visi贸n:"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <RadioGroup
                        android:id="@+id/rgModosDaltonismo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:checked="true"
                            android:padding="16dp"
                            android:minHeight="56dp"
                            android:background="@drawable/radio_option_background"
                            android:text="Colores Est谩ndar"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbProtanopia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:minHeight="56dp"
                            android:background="@drawable/radio_option_background"
                            android:text="Protanopia (Dificultad con rojos)"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbDeuteranopia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:minHeight="56dp"
                            android:background="@drawable/radio_option_background"
                            android:text="Deuteranopia (Dificultad con verdes)"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbTritanopia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:minHeight="56dp"
                            android:background="@drawable/radio_option_background"
                            android:text="Tritanopia (Dificultad con azules/amarillos)"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/rbAcromatopsia"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="16dp"
                            android:minHeight="56dp"
                            android:background="@drawable/radio_option_background"
                            android:text="Acromatopsia (Visi贸n en escala de grises)"
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            app:useMaterialThemeColors="false"
                            app:buttonTint="@color/primary_brown" />
                    </RadioGroup>

                    <!-- Vista previa de colores -->
                    <LinearLayout
                        android:id="@+id/colorPreview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:text="Vista previa:"
                            android:textColor="@android:color/black"
                            android:textSize="14sp" />

                        <View
                            android:id="@+id/previewColor1"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/circle_shape" />

                        <View
                            android:id="@+id/previewColor2"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/circle_shape" />

                        <View
                            android:id="@+id/previewColor3"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/circle_shape" />

                        <View
                            android:id="@+id/previewColor4"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginHorizontal="4dp"
                            android:background="@drawable/circle_shape" />
                    </LinearLayout>

                    <!-- Bot贸n para desactivar daltonismo -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDesactivarDaltonismo"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:backgroundTint="@color/warm_orange"
                        android:text="DESACTIVAR DALTONISMO"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Bot贸n Tutorial -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:text="Tutorial de la Aplicaci贸n"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Vuelve a ver el tutorial interactivo para familiarizarte con todas las funciones de CaballoApp."
                        android:textColor="@android:color/black"
                        android:textSize="14sp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnReiniciarTutorial"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/accent_light_brown"
                        android:text=" REINICIAR TUTORIAL"
                        android:textColor="@android:color/black"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:cornerRadius="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Botones de Acci贸n -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnVolverAccesibilidad"
                    style="@style/ButtonSecondary"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:text="CANCELAR"
                    android:textSize="16sp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnGuardarAccesibilidad"
                    style="@style/ButtonPrimary"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:text="GUARDAR"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
