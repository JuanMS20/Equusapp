<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Imagen ilustrativa -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardImagen"
        android:layout_width="0dp"
        android:layout_height="240dp"
        android:layout_marginBottom="24dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgPasoTutorial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/miologiaequinocompleto" />

    </androidx.cardview.widget.CardView>

    <!-- Contenido del paso -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImagen">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Título del paso -->
            <TextView
                android:id="@+id/tvTituloPaso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:text="Bienvenido a CaballoApp"
                android:textColor="@android:color/black"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Descripción del paso -->
            <TextView
                android:id="@+id/tvDescripcionPaso"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:text="Aprende anatomía muscular del Caballo Criollo Colombiano de forma interactiva y gratuita."
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <!-- Lista de características (opcional) -->
            <LinearLayout
                android:id="@+id/layoutCaracteristicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="• Exploración por regiones anatómicas"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:drawableStart="@android:drawable/btn_star_big_on"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="• Información detallada de cada músculo"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:drawableStart="@android:drawable/btn_star_big_on"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="• Búsqueda rápida y favoritos"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:drawableStart="@android:drawable/btn_star_big_on"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Funciona sin conexión a internet"
                    android:textColor="@android:color/black"
                    android:textSize="14sp"
                    android:drawableStart="@android:drawable/btn_star_big_on"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout> 
