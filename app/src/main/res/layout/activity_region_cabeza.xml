<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".ui.region.RegionCabeza">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        app:cardBackgroundColor="@color/primary_brown"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation_raised"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_md">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_sm"
                android:gravity="center"
                android:text="REGIÃ“N DE LA CABEZA"
                android:textAppearance="@style/TextAppearance.EquusApp.Headline2"
                android:textColor="@color/text_on_dark"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/btnHome"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageButton
                android:id="@+id/btnHome"
                android:layout_width="@dimen/nav_button_size"
                android:layout_height="@dimen/nav_button_size"
                android:background="@drawable/bg_button_navigation"
                android:contentDescription="Ir al menÃº principal"
                android:padding="@dimen/spacing_sm"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_home"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/text_on_dark" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerCard"
        app:layout_constraintHeight_percent="0.40">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Zona 1: Parieto-Temporal (ID: 1001) -->

            <!-- Zona 2: Auricular (ID: 1002) -->

            <!-- Zona 3: Orbital (ID: 1003) -->

            <!-- Zona 4: Mentoniana (ID: 1004) -->

            <!-- Zona 5: Maxilar (ID: 1005) -->

            <!-- Zona 6: Mandibular (ID: 1006) -->

            <!-- Zona 7: MesetÃ©rica (ID: 1007) -->

            <!-- Zona 8: Bucal (ID: 1008) -->

            <!-- Zona 1: Parieto-Temporal (ROJO) - DetrÃ¡s del ojo/sien -->
            <com.villalobos.caballoapp.ui.components.InteractiveAnatomyView
                android:id="@+id/imgRegion"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:contentDescription="@string/anatomia_interactiva_description"
                android:scaleType="fitXY"
                android:src="@drawable/cabeza_lateral"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <!-- Zona 2: Auricular (VERDE) - Oreja -->

            <!-- Zona 3: Orbital (AZUL) - Ojo -->

            <View
                android:id="@+id/hotspotZona1001"
                android:layout_width="43dp"
                android:layout_height="42dp"
                android:background="#80FF0000"
                android:clickable="true"
                android:contentDescription="Zona Parieto-Temporal (ROJO)"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.629"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.279" />

            <View
                android:id="@+id/hotspotZona1002"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#8000FF00"
                android:clickable="true"
                android:contentDescription="Zona Auricular (VERDE)"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.641"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.107" />

            <View
                android:id="@+id/hotspotZona1003"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#800000FF"
                android:clickable="true"
                android:contentDescription="Zona Orbital (AZUL)"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.78"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.38" />

            <!-- Zona 4: Mentoniana (AMARILLO) - Barbilla -->
            <View
                android:id="@+id/hotspotZona1004"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="#80FFFF00"
                android:clickable="true"
                android:contentDescription="Zona Mentoniana (AMARILLO)"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.88"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.82" />

            <!-- Zona 5: Maxilar (MAGENTA) - Puente nasal -->
            <View
                android:id="@+id/hotspotZona1005"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="#80FF00FF"
                android:clickable="true"
                android:contentDescription="Zona Maxilar (MAGENTA)"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.82"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.55" />

            <!-- Zona 6: Mandibular (CIAN) - MandÃ­bula inferior -->

            <!-- Zona 7: MesetÃ©rica (NARANJA) - Mejilla grande -->

            <!-- Zona 8: Bucal (MORADO) - Comisura boca -->

            <View
                android:id="@+id/hotspotZona1006"
                android:layout_width="61dp"
                android:layout_height="37dp"
                android:background="#8000FFFF"
                android:clickable="true"
                android:contentDescription="Zona Mandibular (CIAN)"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.442"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.559" />

            <View
                android:id="@+id/hotspotZona1007"
                android:layout_width="79dp"
                android:layout_height="37dp"
                android:background="#80FFA500"
                android:clickable="true"
                android:contentDescription="Zona MesetÃ©rica (NARANJA)"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.43"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.438" />

            <View
                android:id="@+id/hotspotZona1008"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="#80800080"
                android:clickable="true"
                android:contentDescription="Zona Bucal (MORADO)"
                android:focusable="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.85"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.68" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <TextView
        android:id="@+id/tvInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_md"
        android:text="Selecciona un mÃºsculo"
        android:textAppearance="@style/TextAppearance.EquusApp.Headline4"
        android:textColor="@color/text_primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardImage" />

    <TextView
        android:id="@+id/tvSubInstructions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xs"
        android:text="Selecciona un mÃºsculo de la lista para ver sus detalles"
        android:textAppearance="@style/TextAppearance.EquusApp.Caption"
        android:textColor="@color/text_tertiary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvInstructions" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMuscles"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginTop="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        android:layout_marginBottom="@dimen/spacing_md"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvSubInstructions"
        app:layout_constraintBottom_toTopOf="@+id/btnQuizRegion" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnQuizRegion"
        style="@style/Widget.EquusApp.Button.Primary"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_md"
        android:layout_marginEnd="@dimen/spacing_md"
        android:layout_marginBottom="@dimen/spacing_md"
        android:text="ðŸŽ¯ QUIZ DE CABEZA"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>