<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".MainActivity">

    <!-- Header con degradado -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_lg"
        android:layout_marginTop="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_lg"
        app:cardBackgroundColor="@color/primary_brown"
        app:cardCornerRadius="@dimen/card_corner_radius_large"
        app:cardElevation="@dimen/card_elevation_raised"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/card_padding_large">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="ANATOMÍA MUSCULAR\nCABALLO CRIOLLO"
                android:lineSpacingMultiplier="1.3"
                android:textAppearance="@style/TextAppearance.CaballoApp.Headline1"
                android:textColor="@color/text_on_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_sm"
                android:gravity="center"
                android:text="Anatomía Veterinaria USC"
                android:textAppearance="@style/TextAppearance.CaballoApp.Body"
                android:textColor="@color/text_on_dark"
                android:alpha="0.9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- Imagen del caballo en tarjeta moderna -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/imageCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_lg"
        android:layout_marginEnd="@dimen/spacing_xl"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        app:strokeColor="@color/border_light"
        app:strokeWidth="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerCard">

        <ImageView
            android:id="@+id/imgCaballo"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_margin="@dimen/spacing_md"
            android:scaleType="fitCenter"
            android:src="@drawable/cabeza_lateral" />
    </com.google.android.material.card.MaterialCardView>

    <!-- Contenedor de botones -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/spacing_lg"
        android:layout_marginBottom="@dimen/spacing_md"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageCard">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_lg"
            android:paddingVertical="@dimen/spacing_md">

            <!-- Botón Iniciar - Primary -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnIniciar"
                style="@style/Widget.CaballoApp.Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginBottom="@dimen/spacing_md"
                android:text="INICIAR EXPLORACIÓN"
                app:icon="@android:drawable/ic_menu_compass"
                app:iconGravity="textStart"
                app:iconPadding="@dimen/button_icon_padding" />

            <!-- Botón Accesibilidad - Secondary -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAccesibilidad"
                style="@style/Widget.CaballoApp.Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_sm"
                android:text="ACCESIBILIDAD" />

            <!-- Botón Créditos - Secondary -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnCreditos"
                style="@style/Widget.CaballoApp.Button.Secondary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_lg"
                android:text="CRÉDITOS" />

            <!-- Botón Salir - Exit -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSalir"
                style="@style/Widget.CaballoApp.Button.Exit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SALIR" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
