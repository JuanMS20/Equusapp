<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#F5E6D3"/> <!-- Light warm color -->
            <corners android:radius="16dp"/>
            <stroke android:width="2dp" android:color="@color/primary_brown"/>
        </shape>
    </item>

    <!-- Checked -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFF8E1"/> <!-- Very light gold/cream -->
            <corners android:radius="16dp"/>
            <stroke android:width="3dp" android:color="@color/accent_gold"/>
        </shape>
    </item>

    <!-- Default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white"/>
            <corners android:radius="16dp"/>
            <stroke android:width="1dp" android:color="#E0E0E0"/>
        </shape>
    </item>
</selector>